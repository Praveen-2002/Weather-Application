def win(O_or_X):
    if board[0] == O_or_X and board[1] == O_or_X and board[2] == O_or_X :
        return True
    if board[3] == O_or_X and board[4] == O_or_X and board[5] == O_or_X :
        return True
    if board[6] == O_or_X and board[7] == O_or_X and board[8] == O_or_X :
        return True
    if board[0] == O_or_X and board[3] == O_or_X and board[6] == O_or_X :
        return True
    if board[1] == O_or_X and board[4] == O_or_X and board[7] == O_or_X :
        return True
    if board[2] == O_or_X and board[5] == O_or_X and board[8] == O_or_X :
        return True
    if board[0] == O_or_X and board[4] == O_or_X and board[8] == O_or_X :
        return True  
    if board[6] == O_or_X and board[4] == O_or_X and board[2] == O_or_X :
        return True
while True:
    player_1()
    tictactoe_draw()
    if win('x')==True:
        print("player_1 win")
        break;
    player_2()
    tictactoe_draw()
    if win('O')==True:
