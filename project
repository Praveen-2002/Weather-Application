    print()
    tictactoe_draw()
    def player_1():
    print("player_1 enter your desired board location")
    location=int(input())
    if board [location]!='O' and board [location]!='X' :
        board [location]='X'
    else:
        print("the plsce is taken , select an other place")
        tictactoe_draw()
        player_1()
tictactoe_draw()
